<p>
  <%= form.label :name %><%= required %><br />
  <%= form.text_field :name %>
</p>
<p>
  <%= form.label :age %><%= required %><br />
  <%= form.text_field :age, :size => 3 %>
</p>
<p>
  <%= form.label :active %><br />
  <%= form.check_box :active %>
  <span class='comment'>(leave unchecked if retired)</span>
</p>
<p>
  <%= form.label :level %><%= required %><br />
  <%= form.select :level, [['Amateur','Amateur'],['Semipro','Semipro'], ['Pro', 'Pro']] %>
</p>
